<!DOCTYPE html>
<html lang="de">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <div class="container" style="margin-top:40px; text-align:left;">
    <h1 class="h2" style="margin-bottom:20px;">Admin-Übersicht</h1>
    <ul style="list-style:none; padding:0;">
      <% users.forEach(u => { %>
        <li style="margin-bottom:8px;">
          <a href="/admin/users/<%= u.id %>/transactions" class="nav-link" style="display:flex; justify-content:space-between;">
            <span><%= u.vorname %></span>
            <span><%= u.balance.toFixed(2) %> €</span>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
