<!DOCTYPE html>
<html lang="de">
<%- include('../partials/head') %>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/header') %>
  <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded shadow">
    <% if (error) { %>
      <p class="mb-4 text-center text-red-600"><%= error %></p>
    <% } %>
    <form action="/admin/transactions/new" method="post" class="space-y-4">
      <select name="user_id" required class="w-full rounded border border-gray-300 p-2">
        <% users.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.vorname %></option>
        <% }) %>
      </select>
      <div class="flex space-x-4">
        <label class="flex items-center space-x-1">
          <input type="radio" name="type" value="debt" checked />
          <span>Schuld</span>
        </label>
        <label class="flex items-center space-x-1">
          <input type="radio" name="type" value="repayment" />
          <span>Tilgung</span>
        </label>
      </div>
      <input
        name="amount"
        type="number"
        step="0.01"
        placeholder="Betrag"
        required
        class="w-full rounded border border-gray-300 p-2"
      />
      <input
        name="date"
        type="date"
        required
        class="w-full rounded border border-gray-300 p-2"
      />
      <button type="submit" class="w-full rounded bg-blue-500 p-2 text-white hover:bg-blue-600">
        Speichern
      </button>
    </form>
  </div>
</body>
</html>
