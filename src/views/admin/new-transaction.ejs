<!DOCTYPE html>
<html lang="de">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <div class="container" style="margin-top:40px;">
    <% if (error) { %>
      <p class="mb-4" style="color:#E63946;"><%= error %></p>
    <% } %>
    <form action="<%= formAction %>" method="post">
      <select name="user_id" required class="form-select">
        <% users.forEach(u => { %>
          <option value="<%= u.id %>" <%= selectedUserId==u.id?'selected':'' %>><%= u.vorname %></option>
        <% }) %>
      </select>
      <div style="display:flex; gap:20px; justify-content:center;">
        <label style="display:flex; align-items:center; gap:4px;">
          <input type="radio" name="type" value="debt" checked />
          <span>Schuld</span>
        </label>
        <label style="display:flex; align-items:center; gap:4px;">
          <input type="radio" name="type" value="repayment" />
          <span>Tilgung</span>
        </label>
      </div>
      <input
        name="amount"
        type="number"
        step="0.01"
        placeholder="Betrag"
        required
        class="form-input"
      />
      <input
        name="date"
        type="date"
        required
        class="form-input"
      />
      <button type="submit" class="form-button">
        Speichern
      </button>
    </form>
  </div>
</body>
</html>
